@model IEnumerable<RefCurrencyCode>

@{
    ViewData["Title"] = "Currencies List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
    <tr>
        <th>Currency Name</th>
        <th>Currency Code</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var currency in Model)
    {
        <tr>
            <td>@currency.CurrencyName</td>
            <td>@currency.CurrencyCode</td>
            <td>
                <a href="@Url.Action("CurrencyDetails", new { id = currency.CurrencyCode })">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>