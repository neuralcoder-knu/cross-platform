@{
ViewData["Title"] = "Логін";
}

<form asp-action="Login" method="post" class="p-4 border rounded bg-light">
    <h3 class="text-center mb-4">Вхід до акаунту</h3>

    <div class="form-group">
        <label for="email">Електронна адреса</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="example@domain.com" required />
    </div>

    <div class="form-group">
        <label for="password">Пароль</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Введіть ваш пароль" required />
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
    <p class="text-danger text-center">Невірний логін або пароль.</p>
    }

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary w-100">Увійти</button>
        <a href="/Account/Register" class="btn btn-link mt-2">Немає акаунту? Зареєструватися</a>
    </div>
</form>
